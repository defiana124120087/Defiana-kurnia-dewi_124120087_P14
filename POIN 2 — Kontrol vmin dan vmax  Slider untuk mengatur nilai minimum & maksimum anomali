import streamlit as st
import numpy as np
import matplotlib.pyplot as plt

# Data magnetik
data = np.random.randn(60, 80) * 100

# Sidebar slider
st.sidebar.title("Kontrol Skala")
vmin = st.sidebar.slider(
    "Nilai Minimum (vmin)",
    float(data.min()), float(data.max()), float(data.min())
)
vmax = st.sidebar.slider(
    "Nilai Maksimum (vmax)",
    float(data.min()), float(data.max()), float(data.max())
)

# Plot
fig, ax = plt.subplots()
im = ax.imshow(data, cmap="seismic", vmin=vmin, vmax=vmax)
plt.colorbar(im, ax=ax)

ax.set_title("Peta Magnetik dengan vmin & vmax")
st.pyplot(fig)
